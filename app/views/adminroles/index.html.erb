<h1>Listing Users on ADMINPAGE</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', adminrole_path(user) %></td>
        <td><%= link_to 'Edit', edit_adminrole_path(user) %></td>
        <td><%= link_to 'Destroy', {:controller => 'adminroles', :action => 'destroy', :id => user.id}, :confirm => "Are you sure you want to destroy this record", :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_adminrole_path %>